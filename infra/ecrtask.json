{
  "family": "flexcollect-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::851697623065:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::851697623065:role/flexcollectTaskRole",
  "containerDefinitions": [
    {
      "name": "flexcollect",
      "image": "IMAGE_URI_TO_REPLACE",
      "essential": true,
      "entryPoint": ["python","-u","-m","src.lambda_function"],
      "environment": [
        { "name": "ABR_AUTH_GUID", "value": "REPLACE_WITH_YOUR_GUID" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",  
          "awslogs-group": "/ecs/flexcollect",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "command": []
    }
  ]
}
